@using KidShopOnline.Models
@model IEnumerable<UserOrder>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="cart_items">
    <div class="container">
        <div class="breadcrumbs">
            <ol class="breadcrumb">

                <li class="active">Siparişlerim</li>
            </ol>
        </div>
      
            <div class="table-responsive cart_info">
                <table class="table table-condensed">
                    <thead>
                        <tr class="cart_menu">
                            <td class="image">Sipariş Numarası</td>
                            <td class="date">Sipariş Tarihi</td>
                            <td class="price">Toplam Tutar (₺)</td>

                            <td class="quantity">Sipariş Durumu</td>
                            
                            <td></td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            
                            <td>@item.OrderNumber</td>
                            <td>@item.OrderDate</td>
                            <td>@item.Total</td>
                            <td>@item.OrderState</td>
                            <td>@Html.ActionLink("Sipariş Detay","Details",new {id=item.Id },new {@class="btn btn-warning" })</td>

                        </tr>
                        }


                    </tbody>
                </table>

            </div>
    
       
        

</section>

