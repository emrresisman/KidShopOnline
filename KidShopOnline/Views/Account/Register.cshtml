@model KidShopOnline.Models.Register 
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="form">
    <!--form-->
    <div class="container">
        <div class="row">
          
           
            <div class="col-md-6">
                <div class="signup-form">
                    <!--sign up form-->
                    <h2 style="margin-left:15px">Yeni Üyelik Oluştur!</h2>
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                <form class="form-horizontal" action="#">

                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { placeholder = "Adınız", @class = "form-control", @style = "max-width:150%" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Surname, new { htmlAttributes = new { placeholder = "Soyadınız", @class = "form-control", @style = "max-width:150%" } })
                        @Html.ValidationMessageFor(model => model.Surname, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { placeholder = "Kullanıcı Adınız", @class = "form-control", @style = "max-width:150%" } })
                        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { placeholder = "Mail Adresiniz", @class = "form-control", @style = "max-width:150%" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { placeholder = "Şifreniz",type="password", @class = "form-control", @style = "max-width:150%" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.RePassword, new { htmlAttributes = new { placeholder = "Şifrenizi tekrar girin", type = "password", @class = "form-control", @style = "max-width:150%" } })
                        @Html.ValidationMessageFor(model => model.RePassword, "", new { @class = "text-danger" })
                    </div>
                    <button style="margin-left:15px" type="submit" class="btn btn-default">Kayıt Ol</button>
                </form>

                    }

                </div><!--/sign up form-->
            </div>
        </div>
    </div>
</section>

