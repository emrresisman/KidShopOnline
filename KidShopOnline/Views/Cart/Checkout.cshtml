@model KidShopOnline.Models.ShippingDetails
@{
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section id="form">
    <!--form-->
    <div class="container">
        <div class="row">


            <div class="col-md-6">
                <div class="signup-form">
                    <!--sign up form-->
                    <h2 style="margin-left:15px">Merhaba<span class=" text-warning"> @User.Identity.Name,</span><br /> <br />Adres bilgilerini girerek siparişini buradan tamamlayabilirsin.</h2>
                    @using (Html.BeginForm("Checkout", "Cart", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                <form class="form-horizontal" action="#">
                    <br />
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.City, new { htmlAttributes = new { placeholder = "İl", @class = "form-control", @style = "max-width:150%" } })
                        @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.District, new { htmlAttributes = new { placeholder = "İlçe", @class = "form-control", @style = "max-width:150%" } })
                        @Html.ValidationMessageFor(model => model.District, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Neighborhood, new { htmlAttributes = new { placeholder = "Mahalle", @class = "form-control", @style = "max-width:150%" } })
                        @Html.ValidationMessageFor(model => model.Neighborhood, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Address, new { htmlAttributes = new { placeholder = "Adres", @class = "form-control", @style = "max-width:150%" } })
                        @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.PostCode, new { htmlAttributes = new { placeholder = "Posta Kodu", type = "form-control", @class = "form-control", @style = "max-width:150%" } })
                        @Html.ValidationMessageFor(model => model.PostCode, "", new { @class = "text-danger" })
                        <br />
                    </div>
                   
                    <div class="payment-options">
                        <span>
                            <label><input type="checkbox"> EFT/HAVALE</label>
                        </span>
                        <span>
                            <label><input type="checkbox"> Online Ödeme</label>
                        </span>
                        <span>
                            <label><input type="checkbox"> Paypal</label>
                        </span>
                    </div>
                    <button style="margin-left:15px" type="submit" class="btn btn-warning">Siparişi Tamamla</button>
                </form>

                    }

                </div><!--/sign up form-->
            </div>
        </div>
    </div>
</section>